<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/profile"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/username"
            android:layout_width="200dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:text="Deepakbharti Modi"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:text="deepakbhartimodi@gmail.com"
            android:textAlignment="center"
            android:textSize="14sp" />

        <Button
            android:id="@+id/logout"
            android:drawableLeft="@drawable/ic_logout"
            android:background="@drawable/btn_red"
            android:layout_width="200dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            android:textColor="@color/colorWhite"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/profile">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/change_wall_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/start_change_wall"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Change wallpaper daily"/>
            <Button
                android:id="@+id/start_change_wall"
                android:layout_toRightOf="@id/change_wall_text"
                android:background="@drawable/btn_blue"
                android:layout_marginLeft="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAllCaps="false"/>

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>